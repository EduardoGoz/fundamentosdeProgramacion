

package rangotablas;

import java.util.Scanner;

public class RangoTablas {

    public static void main(String[] args) {
        
        Scanner datos = new Scanner (System.in); 
        
        int tablai = 0;
        int tablaf = 0;

        
        System.out.printf("Entra la tabla de inicio: ");
        tablai = datos.nextInt();
                
        System.out.printf("Entra la tabla de final: ");
        tablaf = datos.nextInt();
        
        for(int j =  tablai; j <= tablaf; j++){
            
            if (j == 0) continue;
            
            System.out.printf("Tabla de %d\n", j);
            System.out.println("No. Multiplicacion Resulatdo");
            for (int i = 1; i<=10; i ++)
            {
                System.out.printf("%3d%5d x %3d = %6d\n", i, j, i, j * i);
            }    
            System.out.println("");
        
        }
    }
    
}
