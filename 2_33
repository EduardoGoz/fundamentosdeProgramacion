
package javaapplication17;
import java.util.Scanner;

public class JavaApplication17 {


    public static void main(String[] args) {
       
        Scanner entrada = new Scanner(System.in);
        float x = 0;
        float y = 0;
        float bmi = 0;
        
        System.out.print("Ingresa tu altura en metros: ");
        x = entrada.nextFloat();
        System.out.print("Ingresa tu peso en kilogramos: ");
        y = entrada.nextFloat();
        
        bmi = y / (x * x);
        
        System.out.printf("Tu indice de masa corporal es : %f \n", bmi);
        
        System.out.print("\nVALORES DE BMI \nBajo peso: menos de 18.5\nNormal:    entre 18.5 y 24.9\nSobrepeso: entre 25 y 29.9\nObeso:     30 o m√°s\n");
        
    }
    
}
