

package arregloauto;
import java.util.*;

public class Auto
{
    private int Numpuertas;
    private String Color;
    private String Marca;
    private double Precio;
    private static int contadorAutos= 0;
    
     public Auto() {
        this.Numpuertas =0;
        this.Color = "";
        this.Marca = "";
        this.Precio = 0.0;
    }
     public Auto(String Marca) {
        this.Numpuertas =0;
        this.Color = "";
        this.Marca = Marca;
        this.Precio = 0.0;
    }

    public Auto( String Marca, double Precio) {
        this.Numpuertas =0;
        this.Color = "";
        this.Marca = Marca;
        this.Precio = Precio;
    }
    
     public Auto( String Marca, double Precio,int Numpuertas) {
        this.Numpuertas = Numpuertas;
        this.Color = "";
        this.Marca = Marca;
        this.Precio = Precio;
    }
    
      public Auto(  String Marca, double Precio,int Numpuertas, String Color) {
        this.Numpuertas =Numpuertas;
        this.Color = Color;
        this.Marca = Marca;
        this.Precio = Precio;
    }
      
      

    public int getNumpuertas() {
        return Numpuertas;
    }

    public void setNumpuertas(int Numpuertas) {
        this.Numpuertas = Numpuertas;
    }

    public String getColor() {
        return Color;
    }

    public void setColor(String Color) {
        this.Color = Color;
    }

    public String getMarca() {
        return Marca;
    }

    public void setMarca(String Marca) {
        this.Marca = Marca;
    }

    public double getPrecio() {
        return Precio;
    }

    public void setPrecio(double Precio) {
        this.Precio = Precio;
    }

    public static int getContadorAutos() {
        return contadorAutos;
    }

    public static void setContadorAutos(int contadorAutos) {
        Auto.contadorAutos = contadorAutos;
    }
   
    
    
    @Override
     public String toString()
      {
      return String.format("\nDatos del Auto\n"
              + "Marca: %s\nPrecio: %.2f\nNumero de Puertas: %d\nColor: %s\nContador: %d\n",
              getMarca(), getPrecio(), getNumpuertas(), getColor(), getContadorAutos());    
      } 
      
    public void EntradaDatos()
    {
        String marca;
        String color;
        int numpuertas;
        double precio;
        
        Scanner datos = new Scanner (System.in); 
        
        System.out.printf("Entra la marca del auto: ");
        marca = datos.nextLine();
        System.out.printf("Entra el color del auto: ");
        color = datos.nextLine();
        System.out.println("Entra el número de puerta del auto: ");
        numpuertas = datos.nextInt();
        System.out.println("Entra el precio del auto:");
        precio = datos.nextDouble();
        
        
        
        setMarca(marca);
        setColor(color);
        setNumpuertas (numpuertas);
        setPrecio(precio);
        
        
    }
    public static void Alta(Auto listaAutos[])        
    {
        
        int posicion=-1;
        if(Auto.contadorAutos >=5)
        {
            System.out.println("Ahorita no joven, a la vuelta t(°u°t)");
            
        }
        else
        {
            for(int i = 0;i<listaAutos.length;i++){
                  if(listaAutos[i].getMarca().equalsIgnoreCase(""))   
                  {
                      posicion=i;
                      break;
                  }
                  
            }
       if (posicion == -1)
       {
           System.out.println("ya estamos conflex chabot! no hay lugar vacion en el arreglo");
       }
       else{
       listaAutos[posicion].EntradaDatos();
       Auto.contadorAutos++;
           System.out.println("Se insertó con éxito el auto en la lista chabot.");
           }
        }
    }
    
    public static void ConsultaGeneral(Auto listaAuto[])
    {
        for (int i =0;i < listaAuto.length; i++)
        {
            System.out.println(listaAuto[i]);
        }
    }
}
